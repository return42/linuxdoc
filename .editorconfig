# https://editorconfig.org/

root = true

[*]
max_line_length = 80
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
insert_final_newline = ignore

[*.py]
indent_style = space
indent_size = 4

[*.sh]
indent_size = 4

[*.rst]
indent_style = space
indent_size = 2
max_line_length = 79

[*.toml]
indent_style = space
indent_size = 2
